
<div class='main-show-div'>
  <button class="cancel-modal btn btn-danger">
    <i class="fa fa-camera-retro fa-4x"></i>
    <!-- <i class="fa fa-times"></i> -->
  </button>

  <div class="robot-show-left">

    <video class='myVideo1'
           autoplay loop preload="auto"
           id="robot-video"
           >
      <source src="assets/video/<%= robot.escape('video_url') %>"
              type="video/mp4">
    </video>

    <div class="robot-info">
      <div class='show-robot-info-line-1-left'>
        <span>
        <%= robot.escape('name') %> (<%= robot.escape('robot_type') %>)
        </span>
        <span class='show-manufacturer'>
          <%= robot.escape('manufacturer') %>
        </span>
      </div>
      <div class='show-robot-info-line-1-right'>
        $ <%= robot.escape('price') %>
      </div>
    </div>

    <div class="robot-desc">
      <%= robot.escape('description') %>
    </div>

  </div> <!-- robot-show-left -->

