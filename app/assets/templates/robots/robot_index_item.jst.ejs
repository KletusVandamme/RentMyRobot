<div class="robot-index-element-image-wrapper">
  <div class='image-container'>

      <img src="assets/<%= robot.escape('image_url') %>"
          alt="Picture your robot here1!"
          class="robot-index-image"/>

      <div class="overlay-price-text">
        <div class="overlay-price-box">
          <div class="overlay-price-symbol">$</div><h2 class="overlay-price-value"><%=robot.escape('price')%></h2>
        </div>
      </div>

  </div>

  <div class='image-text-container'>
    <p class='robot-info-line-1'> <%= robot.escape('name') %> (<%= robot.escape('robot_type') %>) </p>
    <p class='robot-info-line-2'><%= robot.escape('manufacturer') %> </p>
  </div>

</div>
